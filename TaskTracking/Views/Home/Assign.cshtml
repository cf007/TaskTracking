@model TaskTracking.User
@{
    ViewBag.Title = "Assign";
}

<h2>Assign task</h2>
<br/>

@using (Html.BeginForm())
{
    <p><h4><b>@Html.DisplayFor(modelItem => Model.firstname) @Html.DisplayFor(modelItem => Model.lastname)</b></h4></p>
    <br />
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.Tasks, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    <br/>    <br />
    <hr/>
    <p><b>Tasks</b></p>

    <table class="table">

        @foreach (var item in Model.Tasks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.taskname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.taskdesc)
                </td>
            </tr>
        }

    </table>

   

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

